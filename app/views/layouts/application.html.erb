<!DOCTYPE html>
<html>
<head>
  <title>Uglify It!</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div class="formcontainer">
    <h1>Uglify It!</h1>

    <%- flash.each do |key, value| -%>
      <div class="flash flash-<%= key %>">
        <%= value %>
      </div>
    <%- end -%>

    <%= yield %>
  </div>

  <%= yield :extra_footer %>
</body>
</html>
