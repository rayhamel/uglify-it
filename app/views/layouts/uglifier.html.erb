    <input type="button" class="uglifyfontselect uglifycomicsans" value="Comic Sans">
    <input type="button" class="uglifyfontselect uglifymonotypecorsiva" value="Corsiva">
    <input type="button" class="uglifyfontselect uglifycouriernew" value="Courier">
    <input type="button" class="uglifyfontselect uglifyimpact" value="Impact">
