  <%= yield %>
  <style>
    span.tooltip {
      display:inline-block;
      position: absolute;
      width: 200px;
      height: 200px;
      line-height: 20px;
      padding: 10px;
      font-family: Helvetica, Arial, sans-serif;
      font-size: 24px;
      font-weight: bold;
      text-align: left;
      background: #66FF66;
      border: 4px solid #66FF66;
      border-radius: 4px;
      box-shadow: rgba(0, 0, 0, 0.0980392) 1px 1px 2px 0px;
      opacity: 0.92;
      filter: alpha(opacity=92);
    }

    span.tooltip:after {
      content: "";
      position: absolute;
      width: 0;
      height: 0;
      border-width: 10px;
      border-style: solid;
      border-color: transparent #66FF66 transparent transparent;
      top: -3px;
      left: -23px;
    }
  </style>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'tooltip' %>
  <%= yield :extra_footer %>
</body>
</html>
