html * {
  font-family: "Comic Sans MS", "Comic Sans", "Papyrus Condensed", Papyrus, cursive, sans-serif;
}

span.tooltip {
      position: absolute;
      width: 200px;
      height: 200px;
      line-height: 20px;
      padding: 10px;
      font-size: 14px;
      text-align: left;
      color: rgb(113, 157, 171);
      background: rgba(255, 255, 255, 0.0941176);
      border: 4px solid #ffffff;
      border-radius: 4px;
      text-shadow: rgba(0, 0, 0, 0.0980392) 1px 1px 1px;
      box-shadow: rgba(0, 0, 0, 0.0980392) 1px 1px 2px 0px;
}

span.tooltip:after {
      content: "";
      position: absolute;
      width: 0;
      height: 0;
      border-width: 10px;
      border-style: solid;
      border-color: transparent #ffffff transparent transparent;
      top: -3px;
      left: -23px;
}
